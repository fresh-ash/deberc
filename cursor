void cursor()
{
	char pole[80][100];
	pole[0][0] = '|';
	int i = 0, j = 0;
	char curs;

	do
	{
		curs = getchar();
		switch(curs)
		{
		case 'd': j++; break;
		case 'a': j--; break;
		case 's': i++; break;
		case 'w': i--; break;
		}

		if(i >= 0 && j >=0)
		{
			for (int k = 0; k < 80; k++)
			{
				for (int l = 0; l < 100; l++)
				{
					pole[k][l] = ' ';
					if (k == i && l == j) pole[k][l] = '*';
					cout << pole[k][l];
				}
				cout << "\n";
			}
		}

	} while(curs != 'q');

}


using namespace std;

struct A
{
	int index;
};

struct List
{
	A a;
	List* next;
	List* prev;
};



int main() {
	A a[5] = {1,2,3,4,5};
	List *begin = NULL;
	List *endR = begin;
	begin->next = NULL;
	begin = new List;
	for (int i = 0; i < 5; i++)
	{

		begin->a = a[i];
		begin->prev = begin->next;
		begin->next = NULL;
		endR->next = new List;
		endR = endR->next;

	}

	cin.get();
	return 0;
}
